# http://editorconfig.org

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.py,BUILD]
indent_style = space
indent_size = 4

[*.{js,jsx,less,html,json,css,scss,haml,yaml,yml,coffee,sh,sql}]
indent_style = space
indent_size = 2

[LICENSE]
insert_final_newline = false

[{Makefile,*.mk}]
indent_style = tab
